    "packages/*",
    "config/*"
  ],
  "dependencies": {
    "@template/prettier-config": "^1.0.0",
    "firebase-tools": "^11.24.1",
    "lerna": "^6.5.1",
    "nodemon": "^2.0.21"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write --ignore-unknown"
    ],
    "package.json": "prettier-package-json --write"
  },
  "prettier": "@template/prettier-config"
